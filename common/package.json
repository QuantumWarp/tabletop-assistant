{
  "name": "tabletop-assistant-common",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint ./src",
    "copy": "npm run copy:client && npm run copy:server && npm run copy:utility",
    "copy:client": "rimraf ../client/src/common && copyfiles -u 1 ./src/**/* ../client/src/common",
    "copy:server": "rimraf ../server/src/common && copyfiles -u 1 ./src/**/* ../server/src/common",
    "copy:utility": "rimraf ../utility/src/common && copyfiles -u 1 ./src/**/* ../utility/src/common"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  }
}
